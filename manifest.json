{
  "manifest_version": 2,
  "name": "Scout",
  "version": "0.40",

  "description": "A new tab page for travel enthusiasts.",
  "icons": { "16": "images/icon-16.png",
           "48": "images/icon-48.png",
          "128": "images/icon-sm.png" },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["third-party-files/jquery-3.0.0.min.js","third-party-files/jquery.backstretch.min.js", "third-party-files/fakeLoader.min.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["third-party-files/jquery-3.0.0.min.js", "background.js"],
    "persistent": false
  },
    "content_security_policy": "script-src https://use.fontawesome.com 'self'; object-src 'self'",
    "chrome_url_overrides" : {
      "newtab": "index.html"
    },
    "permissions": [
      "activeTab",
      "storage",
      "https://api.flickr.com/",
      "geolocation"
    ]
  }
